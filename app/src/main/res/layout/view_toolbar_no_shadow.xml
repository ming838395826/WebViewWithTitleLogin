<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:skin="http://schemas.android.com/android/skin"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rl_toolbar">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:minHeight="48dp"
        app:title="@string/null_String"
        app:navigationIcon="@mipmap/ic_return"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        android:fitsSystemWindows="true"
        android:layout_centerInParent="true"
        android:background="@color/white"
        app:theme="@style/ToolbarOverflow"
        skin:enable="true">

        <!-- 图案标题 根据需要，现在是隐藏状态-->
        <ImageView
            android:id="@+id/iv_main_title"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_width="@dimen/toolbar_title_image_width"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_launcher"
            android:scaleType="fitCenter"
            android:visibility="gone"
            />

        <!-- 文字标题 -->
        <TextView
            android:id="@+id/tv_main_title"
            android:layout_centerInParent="true"
            android:gravity="left|center_vertical"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/null_String"
            android:textColor="@color/text_secondary"
            android:textSize="@dimen/text_size_title"
            android:visibility="visible" />
        <!-- 右边图标 -->

        <ImageView
            android:id="@+id/iv_image_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_qygaj_title"
            android:layout_gravity="center"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/iv_help"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:text="@string/null_String"
            android:src="@mipmap/ic_help"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_title"
            android:visibility="gone"
            />

        <ImageView
            android:id="@+id/iv_add"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:text="@string/null_String"
            android:src="@mipmap/ic_chat_add"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_title"
            android:visibility="gone"
            />
    </android.support.v7.widget.Toolbar>

</RelativeLayout>